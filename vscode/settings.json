{
  // General settings
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
    "*.pdf": "latex-workshop-pdf-hook"
  },
  "workbench.sideBar.location": "right",
  "editor.formatOnSave": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.renderWhitespace": "all",
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "support.type.property-name",
        "settings": {
          "foreground": "#62c1d4"
        }
      },
      {
        "scope": "support.type.property-name.table",
        "settings": {
          "foreground": "#4EC9B0"
        }
      },
      {
        "scope": "support.type.property-name.array",
        "settings": {
          "foreground": "#569CD6"
        }
      },
      {
        "scope": "constant.other.time",
        "settings": {
          "foreground": "#DCDCAA"
        }
      }
    ]
  },
  "files.autoSave": "afterDelay",
  "explorer.confirmDragAndDrop": false,
  "terminal.integrated.inheritEnv": false,
  // Python settings
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  "ruff.enable": true,
  "ruff.lint.run": "onType",
  "python.analysis.typeCheckingMode": "basic",
  "notebook.defaultFormatter": "ms-python.black-formatter",
  // SQL settings
  "[sql]": {
    "editor.defaultFormatter": "sqlfluff.sqlfluff"
  },
  "sqlfluff.lint.enable": true,
  "sqlfluff.format.enable": true,
  "sqlfluff.excludeRules": [
    "ambiguous.column_count",
    "layout.long_lines",
    "layout.cte_newline",
    "references.keywords",
    "structure.column_order",
    "capitalisation.identifiers"
  ],
  // LaTeX settings
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.formatting.latex": "latexindent",
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  // Git settings
  "git.autofetch": true,
  "git.confirmSync": false,
  // Docker settings
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  // Spell checking settings
  "cSpell.language": "en-US",
  // File associations
  "files.associations": {
    "*.gs": "javascript",
    "*.css": "tailwindcss",
    "*.tmux.conf": "shellscript"
  },
  // Others
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1"
}
